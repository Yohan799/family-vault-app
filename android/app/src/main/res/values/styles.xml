<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Launch theme - fullscreen splash without status bar space reservation -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowSplashScreenBackground">@color/splashBackground</item>
        <!-- Hide Android 12+ animated icon that conflicts with custom splash -->
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <!-- Do NOT reserve space for status bar - let splash extend edge-to-edge -->
        <item name="android:fitsSystemWindows">false</item>
        <!-- Support display cutouts (notches) -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- Make system bars transparent so splash shows behind them -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>