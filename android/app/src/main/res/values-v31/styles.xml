<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>

    <!--
        Android 12+ (API 31+) Splash Screen Theme
        STRICT COMPLIANCE - Works on ALL manufacturers
        Tested: Pixel, Samsung, Realme, Xiaomi, Vivo, Oppo
    -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        
        <!-- ICON ONLY - No text (meets Android 12+ requirements) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon_only</item>
        
        <!-- Background color -->
        <item name="windowSplashScreenBackground">@color/splashBackground</item>
        
        <!-- Icon background color (circle behind icon) -->
        <item name="windowSplashScreenIconBackgroundColor">@color/splashBackground</item>
        
        <!-- Quick animation - web splash will show the full branding -->
        <item name="windowSplashScreenAnimationDuration">200</item>
        
        <!-- Transition to app theme -->
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
        
        <!-- Fallback for older compatibility library -->
        <item name="android:windowBackground">@color/splashBackground</item>
        
        <!-- System UI settings -->
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
